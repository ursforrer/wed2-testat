<header>
    <div class="logo">
        <picture>
            <img src="images/todo.png" alt="Logo Todo">
        </picture>
    </div>
    <h1>Note Pro</h1>
</header>
<main>
    <div id="navigationstlye">
        <form action="/notes/new" method="get">
            <button type="submit" class="btn-green">Create new note</button>
        </form>
        <div id="spacerheader"></div>
        <form action="/" method="get">
            <input type="hidden" name="style" value="{{style}}"/>
            <button type="submit" class="btn-green">Change style</button>
        </form>
    </div>

    <div id="sortandfilter">
        <div id="sort">
            <form action="/" method="get">
                <input type="hidden" name="orderBy" value="duedate"/>
                <button type="submit" class="btn-blue">By finish date</button>
            </form>
            <form action="/" method="get">
                <input type="hidden" name="orderBy" value="createdate"/>
                <button type="submit" class="btn-blue">By create date</button>
            </form>
            <form action="/" method="get">
                <input type="hidden" name="orderBy" value="importance"/>
                <button type="submit" class="btn-blue">By Importance</button>
            </form>
        </div>
        <div id="filter">
            <form action="/" method="get">
                <input type="hidden" name="filter" value="{{filter}}"/>
                <input class="btn-blue" type="submit" value="Show finished"/>
            </form>
        </div>
    </div>

    <section class="notes">
        <!-- TODO: inhalt checkboxen handlebars, textfeld, -->
        {{#each notes}}
            <article>
                <div class="status">
                    <p>{{duedate}}</p>
                    <input type="checkbox" {{# if finished}}checked{{/if}}/>
                </div>
                <div class="output">
                    <h3>{{title}}</h3>
                    <textarea readonly>{{description}}</textarea>
                </div>
                <div class="actions">
                    <form method="get" action="notes/edit/{{_id}}">
                        <button type="submit" class="btn-green">Edit</button>
                    </form>
                </div>
            </article>

        {{else}}
            <h3>Leere Liste. Es sind keine Eintr√§ge vorhanden.</h3>
        {{/each}}

    </section>
</main>



